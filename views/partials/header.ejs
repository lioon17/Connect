        <div class="s-sidebar-content">
            <div class="s-search-container">
                <input type="text" placeholder="Search..." class="s-search-input">
            </div>
            <nav class="s-sidebar-menu">
                <a href="/product?subcategory=new" class="s-menu-item active"><i class="fas fa-home"></i> New Products</a>
                <a href="/product?subcategory=special offers" class="s-menu-item">
                     <i class="bi bi-gift"></i> Special offers
                    </a>
                <a href="/product" class="s-menu-item"><i class="bi bi-shop"></i> Our Products</a>
                <a href="/contact" class="s-menu-item"><i class="bi bi-telephone"></i></i> Contact us</a>
                <a href="/login" class="s-menu-item"><i class="bi bi-person-circle"></i></i></i> register/login</a>
                <a href="#" class="s-menu-item"><i class="fas fa-cog"></i> Settings</a>
            </nav>
            <div class="s-sidebar-group">
                <button class="s-group-toggle">
                    Resources
                    <i class="fas fa-chevron-right"></i>
                </button>
                <div class="s-group-content">

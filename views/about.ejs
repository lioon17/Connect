    <title>About Us</title>
    <link rel="stylesheet" href="style.css">
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }
        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Hero section */
        .hero {
            position: relative;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
        }
        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('/images/Top\ ECommerce\ development\ company\ in\ New\ York.jpeg') no-repeat center center/cover;
            filter: brightness(50%);
        }
        .hero-content {
            position: relative;
            z-index: 1;
        }
        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        /* Our History section */
        .history {
            padding: 4rem 0;
        }
        .history-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        @media (min-width: 768px) {
            .history-grid {
                grid-template-columns: 1fr 1fr;
            }
        }
        .section-title {
            font-size: 2rem;
            margin-bottom: 1rem;
        }
        .section-subtitle {
            display: inline-block;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }
        .section-subtitle::before {
            content: '';
            display: block;
            width: 2rem;
            height: 0.25rem;
            background-color: #1e40af;
            margin-bottom: 0.5rem;
        }
        .feature-list {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 1rem;
        }
        .feature-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .feature-item::before {
            content: '✓';
            color: #1e40af;
        }
        .image-grid {
            display: grid;
            place-items: center; /* Centers the image in the grid */
            max-width: 400px; /* Adjust width as needed */
            margin: auto; /* Centers the container */
        }

        .image-grid img {
            width: 100%; /* Ensures the image takes full width of the container */
            max-height: 300px; /* Controls maximum height */
            object-fit: cover; /* Ensures the image fills the container without distortion */         
    }


        /* What We Done section */
        .projects {
            background-color: #f3f4f6;
            padding: 4rem 0;
            text-align: center;
        }
        .project-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 2rem;
        }
        .project-item {
            position: relative;
            height: 300px;
            overflow: hidden;
        }
        .project-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        .project-item:hover img {
            transform: scale(1.1);
        }

        /* Stats section */
        .stats {
            background-color: #1e3a8a;
            color: white;
            padding: 4rem 0;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            text-align: center;
        }
        .stat-item h3 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }
        .stat-item p {
            color: #93c5fd;
        }

        /* Mission & Visions section */
        .mission {
            padding: 4rem 0;
        }
        .mission-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        @media (min-width: 768px) {
            .mission-grid {
                grid-template-columns: 1fr 1fr;
            }
        }
        .mission-images {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        .mission-images img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .mission-images img:last-child {
            grid-column: span 2;
        }
    </style>
</head>
<body>
    <div class="hero">

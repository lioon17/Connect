<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce Dashboard</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
<body>
    <div class="container">
        <div class="d-sidebar">
            <div class="d-sidebar-header">
                <h3>Menu</h3>
                <button class="d-close-btn" aria-label="Close Sidebar"><i class="bi bi-x"></i></button>
            </div>
            <ul class="d-sidebar-menu">
                <li><a href="#" data-section="customer-insights" class="d-active"><i class="bi bi-people-fill"></i> Customer</a></li>
                <li><a href="#" data-section="sales-insights"><i class="bi bi-currency-dollar"></i> Sales</a></li>
                <li><a href="#" data-section="product-management"><i class="bi bi-boxes"></i> Product Management</a></li>
                <li><a href="#" data-section="orders-management"><i class="bi bi-cart3"></i> Orders Management</a></li>
                <li><a href="#" data-section="performance-tracking"><i class="bi bi-compass"></i> Performance Tracking</a></li>
                <li><a href="#" data-section="transaction-statements"><i class="bi bi-currency-dollar"></i> Transaction statements</a></li> 
                <button id="logoutButton" class="button-51" role="button">Logout</button>  
            </ul>
        </div>
    
        <div class="d-main-content">


            <button class="d-sidebar-toggle" aria-label="Toggle Sidebar">
                <i class="bi bi-list"></i> Menu
            </button>
            <h1>E-commerce Dashboard</h1>
    
          <!-- Customer Insights -->
<section id="customer-insights" style="display: block;">
    <h2>Customer Insights</h2>
    <div class="d-grid">
        <!-- New Customers Card -->
        <div class="d-card">
            <div class="d-card-title">New Customers</div>
            <p id="newCustomers" class="customer-metric">Loading...</p>
        </div>
        <!-- Total Customers Card -->
        <div class="d-card">
            <div class="d-card-title">Total Customers</div>
            <p id="totalCustomers" class="customer-metric">Loading...</p>
        </div>
    </div>
    <!-- Returning vs. New Customers Chart -->
    <div class="d-card">
        <div class="d-card-title">Returning vs. New Customers</div>
        <div class="chart-container">
            <canvas id="customerChart"></canvas>
        </div>
    </div>
</section>

        


        <!-- Sales Insights -->
        <section id="sales-insights" style="display: block;">
            <h2>Sales Insights</h2>
            <div class="d-grid">
                <!-- Curtain Sales -->
                <div class="d-card">
                    <div class="d-card-title">Curtains Sales</div>
                    <p id="curtainsSales">0.00 KSH</p>
                </div>
        
                <!-- Sheers Sales -->
                <div class="d-card">
                    <div class="d-card-title">Sheers Sales</div>
                    <p id="sheersSales">0.00 KSH</p>
                </div>
        
                <!-- Women's Clothing Sales (Mapped from 'Dresses') -->
                <div class="d-card">
                    <div class="d-card-title">Women's Clothing Sales</div>
                    <p id="womenClothingSales">0.00 KSH</p>
                </div>
        
                <!-- Men's Clothing Sales -->
                <div class="d-card">
                    <div class="d-card-title">Men's Clothing Sales</div>
                    <p id="menClothingSales">0.00 KSH</p>
                </div>
        
                <!-- Men's Shoes Sales -->
                <div class="d-card">
                    <div class="d-card-title">Men's Shoes Sales</div>
                    <p id="menShoesSales">0.00 KSH</p>
                </div>
        
                <!-- Women's Shoes Sales (Mapped from 'Shoes') -->
                <div class="d-card">
                    <div class="d-card-title">Women's Shoes Sales</div>
                    <p id="womenShoesSales">0.00 KSH</p>
                </div>
            </div>

            <!-- Real-Time Purchase Updates -->
            <div class="d-card">
                <div class="d-card-title">Real-Time Purchase Updates</div>
                <p id="latestPurchase">Latest Purchase: Loading...</p>
            </div>
        
             
            <!-- Top-Selling Products -->
            <div class="d-card">
                <div class="d-card-title">Top-Selling Products</div>
                <ul id="topSellingProducts">
                    <li>Loading...</li>
                </ul>
            </div>

            <!-- Low-Selling Products -->
            <div class="d-card">
                <div class="d-card-title">Low-Selling Products</div>
                <ul id="lowSellingProducts">
                    <li>Loading...</li>
                </ul>
            </div>

            <div class="d-card">
                <div class="d-card-title">Sales by Category (Donut Chart)</div>
                <div class="chart-container">
                    <canvas id="salesByCategoryDonutChart"></canvas>
                </div>
            </div>
            
            <div class="d-card">
                <div class="d-card-title">Sales by Category (Bar Graph)</div>
                <div class="chart-container">
                    <canvas id="salesByCategoryBarChart"></canvas>
                </div>
            </div>
           
        </section>


        
        <section id="product-management" style="display: none;">
            <h2>Product Management</h2>
            <div class="d-card">
                <div class="d-card-title">Add New Product</div>
                <form id="addProductForm">
                    <input type="text" id="productName" class="input-field" placeholder="Product Name" required>
                    <input type="text" id="productCategory" class="input-field" placeholder="Category" required>
                    <input type="number" id="productPrice" class="input-field" placeholder="Price" required>
                    <input type="number" id="productStock" class="input-field" placeholder="Stock" required>                
                    <button type="submit" class="btn">Add Product</button>
                </form>
            </div>
            <div class="d-card">
                <div class="d-card-title">Product List</div>
                <table id="productTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Product rows will be added dynamically -->
                    </tbody>
                </table>
            </div>
        </section>
        



        <section id="orders-management"  style="display: none;">
            <h1>Order Management</h1>
            <div class="d-controls">
                <input type="text" id="searchInput" class="input-field" placeholder="Search orders..." />
                <select id="statusFilter" class="d-filter">
                    <option value="all">All Statuses</option>
                    <option value="pending">Pending</option>
                    <option value="processing">Processing</option>
                    <option value="completed">Completed</option>
                </select>
                <select id="sortBy" class="d-filter">
                    <option value="date"  >Sort by Date</option>
                    <option value="total" >Sort by Total</option>
                </select>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="orderTableBody">
                    <!-- Orders will be dynamically inserted here -->
                </tbody>
            </table>
        </section>
        

        
       <!-- Performance Tracking -->
        <section id="performance-tracking" style="display: none">
            <h2>Performance Tracking</h2>

            <div class="d-card">
                <div class="d-card-title">Sales Trends Graph (Weekly)</div>
                <div class="chart-container">
                    <canvas id="salesTrendsChart"></canvas>
                </div>
            </div>
                    
            <!-- Category-Wise Performance Comparison -->
            <div class="d-card">
                <div class="d-card-title">Category-Wise Performance Comparison</div>
                <div class="chart-container">
                    <canvas id="categoryPerformanceChart"></canvas>
                </div>
            </div>


            
        </section>

